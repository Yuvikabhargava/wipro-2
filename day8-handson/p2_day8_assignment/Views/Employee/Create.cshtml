@model p2_day8_assignment.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Date of Joining</label>
        <input asp-for="DateOfJoining" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Salary</label>
        <input asp-for="Salary" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="Dept" class="form-control">
            <option>HR</option>
            <option>Accts</option>
            <option>IT</option>
        </select>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>